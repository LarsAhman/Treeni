<?xml version="1.0" encoding="UTF-8"?>

<?import fi.jyu.mit.fxgui.ComboBoxChooser?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxTreeni.LisaaGUIController">
   <children>
      <HBox minWidth="100.0" VBox.vgrow="NEVER">
         <children>
            <Label alignment="CENTER" minWidth="100.0" text="Nimi" HBox.hgrow="NEVER" />
            <TextField fx:id="editNimi" minWidth="1.0" HBox.hgrow="ALWAYS" />
            <VBox minWidth="120.0" HBox.hgrow="NEVER" />
         </children>
      </HBox>
      <HBox minWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox minWidth="120.0" spacing="10.0" HBox.hgrow="NEVER" />
         </children>
      </HBox>
      <HBox minWidth="100.0" VBox.vgrow="NEVER">
         <children>
            <Label alignment="CENTER" minWidth="100.0" text="Vaikeus" HBox.hgrow="NEVER" />
            <ComboBoxChooser fx:id="editVaikeus" rivit="1&#10;2&#10;3&#10;4&#10;5" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox minWidth="100.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" minWidth="100.0" text="Kuvaus" HBox.hgrow="NEVER" />
            <TextArea fx:id="editKuvaus" minWidth="1.0" prefHeight="200.0" wrapText="true" HBox.hgrow="ALWAYS" />
            <VBox minWidth="120.0" HBox.hgrow="NEVER" />
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="80.0">
               <children>
                  <Button fx:id="buttonTallenna1" defaultButton="true" minWidth="61.0" mnemonicParsing="false" onAction="#handleVieMuokkaus" text="Ok" />
                  <Button fx:id="buttonPeruuta1" cancelButton="true" minWidth="61.0" mnemonicParsing="false" onAction="#handlePeruuta" text="Peruuta" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
            <Label fx:id="labelVirhe" alignment="CENTER" contentDisplay="CENTER" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
